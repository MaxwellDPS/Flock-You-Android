<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- ================================================================== -->
    <!-- STANDARD PERMISSIONS (Required for all installation modes)        -->
    <!-- ================================================================== -->

    <!-- Bluetooth permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" android:maxSdkVersion="30" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <!-- WiFi permissions -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.NEARBY_WIFI_DEVICES" />

    <!-- Location permissions (required for BLE and WiFi scanning) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Foreground service - multiple types for maximum permission coverage -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Vibration for alerts -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- Audio recording for ultrasonic beacon detection -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Telephony for cellular monitoring (IMSI catcher detection) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Internet for maps -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Battery optimization exemption - REQUIRED for reliable background scanning -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Wake lock for keeping scans alive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Boot completed for auto-start -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Exact alarms for reliable periodic tasks (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <!-- ================================================================== -->
    <!-- SYSTEM/OEM PRIVILEGED PERMISSIONS                                 -->
    <!-- These permissions are only granted when app is installed as:      -->
    <!-- - System app in /system/priv-app                                  -->
    <!-- - OEM app signed with platform certificate                        -->
    <!-- They are silently ignored for sideloaded (user) app installs.     -->
    <!-- ================================================================== -->

    <!-- BLUETOOTH PRIVILEGED: Bypass BLE duty cycling restrictions
         Allows continuous scanning without OS-enforced pauses.
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"
        tools:ignore="ProtectedPermissions" />

    <!-- PEERS MAC ADDRESS: Access real hardware MAC addresses
         Bypasses MAC randomization for WiFi Direct/Aware peers.
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.PEERS_MAC_ADDRESS"
        tools:ignore="ProtectedPermissions" />

    <!-- LOCAL MAC ADDRESS: Access device's own MAC address
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.LOCAL_MAC_ADDRESS"
        tools:ignore="ProtectedPermissions" />

    <!-- READ PRIVILEGED PHONE STATE: Access IMEI, IMSI, SIM serial
         Essential for IMSI catcher (Stingray) detection.
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />

    <!-- CONNECTIVITY INTERNAL: Access internal network APIs
         Used for WiFi scan throttling control.
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.CONNECTIVITY_INTERNAL"
        tools:ignore="ProtectedPermissions" />

    <!-- NETWORK SETTINGS: Modify network settings
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.NETWORK_SETTINGS"
        tools:ignore="ProtectedPermissions" />

    <!-- INTERACT ACROSS USERS: For multi-user support on tablets/work profiles
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS"
        tools:ignore="ProtectedPermissions" />

    <!-- MANAGE USERS: For device owner scenarios
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.MANAGE_USERS"
        tools:ignore="ProtectedPermissions" />

    <!-- PERSISTENT ACTIVITY: Keep process alive (OEM only)
         Prevents system from killing the service.
         Protection level: signature|privileged -->
    <uses-permission android:name="android.permission.PERSISTENT_ACTIVITY"
        tools:ignore="ProtectedPermissions" />

    <!-- START ACTIVITIES FROM BACKGROUND: Launch activities from background
         Protection level: signature|privileged|development -->
    <uses-permission android:name="android.permission.START_ACTIVITIES_FROM_BACKGROUND"
        tools:ignore="ProtectedPermissions" />

    <!-- PACKAGE USAGE STATS: Access to usage stats for battery attribution
         Protection level: signature|privileged|development|appop -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    
    <!-- Feature declarations -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />
    <uses-feature android:name="android.hardware.wifi" android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" android:required="false" />

    <!-- Package visibility for Orbot detection (required Android 11+) -->
    <queries>
        <package android:name="org.torproject.android" />
    </queries>

    <application
        android:name=".FlockYouApplication"
        android:allowBackup="false"
        android:fullBackupOnly="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FlockYou"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="34">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.FlockYou">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Scanning service with multiple foreground types for robust background operation -->
        <service
            android:name=".service.ScanningService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location|connectedDevice|specialUse"
            android:stopWithTask="false"
            android:process=":scanning">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="surveillance_detection" />
        </service>
        
        <!-- Boot receiver for auto-starting service -->
        <!-- Note: exported=true is required to receive BOOT_COMPLETED, but we verify the action -->
        <receiver
            android:name=".service.BootReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
        
        <!-- Service restart receiver -->
        <receiver
            android:name=".service.ServiceRestartReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.flockyou.RESTART_SERVICE" />
                <action android:name="com.flockyou.SERVICE_HEARTBEAT" />
            </intent-filter>
        </receiver>

        <!-- JobService for backup service restart (survives Doze mode) -->
        <service
            android:name=".service.ServiceRestartJobService"
            android:enabled="true"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        
        <!-- File Provider for sharing exported files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Quick Settings Tile for Quick Wipe (Priority 2 Feature) -->
        <service
            android:name=".service.QuickWipeTileService"
            android:exported="true"
            android:icon="@drawable/ic_delete_sweep"
            android:label="Quick Wipe"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
            <meta-data
                android:name="android.service.quicksettings.TOGGLEABLE_TILE"
                android:value="false" />
        </service>

        <!-- Quick Wipe Confirmation Activity (transparent dialog) -->
        <activity
            android:name=".service.QuickWipeConfirmationActivity"
            android:exported="false"
            android:theme="@style/Theme.FlockYou.Transparent"
            android:excludeFromRecents="true"
            android:taskAffinity="" />

        <!-- Quick Wipe Broadcast Receiver -->
        <receiver
            android:name=".service.QuickWipeReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.flockyou.ACTION_QUICK_WIPE_CONFIRMED" />
            </intent-filter>
        </receiver>

        <!-- ================================================================== -->
        <!-- NUKE/EMERGENCY WIPE SYSTEM RECEIVERS                              -->
        <!-- ================================================================== -->

        <!-- USB Watchdog Receiver - Detects USB/ADB connections -->
        <receiver
            android:name=".service.nuke.UsbWatchdogReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
                <action android:name="android.hardware.usb.action.USB_ACCESSORY_ATTACHED" />
                <action android:name="android.intent.action.POWER_CONNECTED" />
            </intent-filter>
        </receiver>

        <!-- SIM State Receiver - Detects SIM removal -->
        <receiver
            android:name=".service.nuke.SimStateReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.SIM_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <!-- Network Isolation Receiver - Detects airplane mode/network loss -->
        <receiver
            android:name=".service.nuke.NetworkIsolationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.AIRPLANE_MODE" />
            </intent-filter>
        </receiver>

        <!-- Boot Watcher - Detects rapid reboots -->
        <receiver
            android:name=".service.nuke.BootWatcher"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
